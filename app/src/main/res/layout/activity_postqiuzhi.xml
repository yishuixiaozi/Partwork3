<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhit.edu.partwork3.PostqiuzhiActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/color_999999"
                    android:hint="请输入标题（20个字数以内）"
                    android:theme="@style/MyEditText"
                    />
                <LinearLayout
                    android:id="@+id/ll_jobtype"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_ctg_label"/>
                    <Spinner
                        android:id="@+id/sp_jobtype"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:entries="@array/jobtype"
                        android:spinnerMode="dialog">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_date_label"/>
                    <EditText
                        android:id="@+id/edt_bftime"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7"
                        android:textColor="@color/color_999999"
                        android:hint="兼职时间"
                        android:theme="@style/MyEditText"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_worktime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_time_label"/>
                    <EditText
                        android:id="@+id/edt_worktime"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7"
                        android:textColor="@color/color_999999"
                        android:hint="每天空闲时间段"
                        android:theme="@style/MyEditText"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_time_label"/>
                    <EditText
                        android:id="@+id/edt_username"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="5"
                        android:textColor="@color/color_999999"
                        android:hint="联系人"
                        android:theme="@style/MyEditText"
                        />
                    <EditText
                        android:id="@+id/edt_phonenum"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="7"
                        android:inputType="number"
                        android:textColor="@color/color_999999"
                        android:hint="联系电话"
                        android:theme="@style/MyEditText"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_describe"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="对兼职的其他期望内容"
                    android:background="@color/color_E6E8E7"
                    android:gravity="top"/>
                <EditText
                    android:id="@+id/edt_myadvantage"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:hint="我的优势"
                    android:background="@color/color_E6E8E7"
                    android:gravity="top"/>
                <Button
                    android:id="@+id/btn_post"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="确认发布"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/my_toorbar"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/im_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/top_return_icon"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="求职发布"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

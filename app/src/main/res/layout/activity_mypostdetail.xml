<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhit.edu.partwork3.JobdetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/my_toorbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/top_return_icon"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="岗位详情"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/jobtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="招聘内容的标题"
                        android:textSize="30sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">
                        <EditText
                            android:id="@+id/paymoney"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/material_blue_grey_95"
                            android:background="@null"
                            android:text="薪资水平"/>
                        <EditText
                            android:id="@+id/payway"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/material_blue_grey_95"
                            android:textSize="16sp"
                            android:background="@null"
                            android:text="结算时间"/>
                        <EditText
                            android:id="@+id/begintime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/material_blue_grey_95"
                            android:textSize="16sp"
                            android:background="@null"
                            android:text="开始时间"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#696969">
                </View>
                <!--兼职人数，兼职日期，兼职时段-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="招募人数"/>
                        <EditText
                            android:id="@+id/peoplenum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:inputType="number"
                            android:textColor="@color/material_blue_grey_95"
                            android:background="@null"
                            android:textSize="16sp"
                            android:text="这里显示找平人数的内容"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="兼职日期"/>
                        <EditText
                            android:id="@+id/bftime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textColor="@color/material_blue_grey_95"
                            android:textSize="16sp"
                            android:background="@null"
                            android:text="这里显示找平人数的内容"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="兼职时段"/>
                        <EditText
                            android:id="@+id/worktime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="16sp"
                            android:textColor="@color/material_blue_grey_95"
                            android:background="@null"
                            android:paddingBottom="10dp"
                            android:text="这里显示找平人数的内容"/>
                    </LinearLayout>
                </LinearLayout>
                <!--这里是兼职地点-->
                <LinearLayout
                    android:id="@+id/ll_map"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@drawable/map"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="15dp"
                        android:text="兼职地点"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/workplace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingLeft="10dp"
                        android:textColor="@color/material_blue_grey_95"
                        android:text="地点文字描述"
                        android:background="@null"
                        android:singleLine="true"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <!--兼职描述-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="兼职描述"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/edt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/material_blue_grey_95"
                        android:background="@null"
                        android:text="这里是兼职描述内容" />
                </LinearLayout>
                <!--提示内容-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_reaction"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="提示：点击“编辑”可以内容修改！"
                        android:textColor="@color/color_D33D3C"/>
                </LinearLayout>
                <!--兼职信息发布者的相关信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.hhit.edu.view.CircleImageView
                        android:id="@+id/circle_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/my_avatar" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingLeft="25dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:textColor="@color/material_blue_grey_95"
                            android:background="@null"
                            android:textSize="20sp"
                            android:text="周总"/>
                        <EditText
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:inputType="phone"
                            android:textColor="@color/material_blue_grey_95"
                            android:background="@null"
                            android:paddingTop="2dp"
                            android:text="联系电话"/>
                    </LinearLayout>
                </LinearLayout>
                <!--空白填充无意义-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_change"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="编辑"
                android:gravity="center"
                android:textSize="30sp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_second_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:onClick="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_express"
            style="@style/home_secondhead_textview_style"
            android:drawableTop="@drawable/home_xinfang_secondhead"
            android:text="快递查询" />

        <TextView
            android:id="@+id/tv_ershoufang"
            style="@style/home_secondhead_textview_style"
            android:drawableTop="@drawable/home_ershoufang_secondhead"
            android:text="我要求职" />

        <TextView
            android:id="@+id/tv_zufang"
            style="@style/home_secondhead_textview_style"
            android:drawableTop="@drawable/ic_zufang"
            android:text="等待完善" />

        <TextView
            android:id="@+id/tv_zixun"
            style="@style/home_secondhead_textview_style"
            android:drawableTop="@drawable/home_zixun_secondhead"
            android:text="等待完善" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#E1E1E3"
        android:layout_height="3dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/heye"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_post"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#FFF">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:background="@drawable/main_daiban_icon"
                android:layout_height="50dp" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="发布兼职"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:background="@drawable/icon_succ"
                android:layout_height="50dp" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="已通过"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_wait"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:background="@drawable/main_mess_icon"
                android:layout_height="50dp" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="待审核"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sorry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:background="@drawable/sorry_icon"
                android:layout_height="50dp" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="未通过"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
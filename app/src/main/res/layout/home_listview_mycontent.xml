<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <!--自行设计样式内容-->
   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="@dimen/home_listview_items_height">
       <ImageView
           android:layout_width="match_parent"
           android:id="@+id/home_listview_img"
           android:background="@mipmap/head_logo"
           android:layout_height="70dp"
           android:layout_gravity="center"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_height="@dimen/home_listview_items_height">
        <TextView
            android:id="@+id/home_listview_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="这里是标题部分"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/home_listview_paymoney"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="这里是薪水"/>
            <TextView
                android:id="@+id/home_listview_payway"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="20dp"
                android:paddingLeft="20dp"
                android:text="工资的结算方式"/>
        </LinearLayout>
        <TextView
            android:id="@+id/home_listview_worktime"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="这里工作时间"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
</LinearLayout>